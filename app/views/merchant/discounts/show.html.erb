<div class='discountsContainer'>
  <section id="discount-<%= @discount.id %>">
    <h1><%= @discount.name %></h1>
    <p>Items required: <%= @discount.item_count %></p>
    <p>Discount: <%= @discount.percent %>%</p>
    <%= link_to 'Edit', edit_merchant_discount_path(@discount) %>
    <%= link_to 'Delete', merchant_discount_path(@discount), method: :delete %>
  </section>
</div>
